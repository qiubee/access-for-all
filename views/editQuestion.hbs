{{> creatorHeader}}
<main id="content">
	<h1>Vraag <span>{{questionNumber}}</span> bewerken</h1>
	<a href="/c/{{creatorname}}/poll/{{pollId}}/edit">Ga terug<span> naar poll bewerken</span></a>
	<form action="/update-vraag" method="POST">
	<label>Vraag: <input type="text" name="title" value="{{questionTitle}}" maxlength="56"></label>
	<fieldset>
		<legend>Antwoorden</legend>
		<ol>
			{{#each options}}
			<li><label>Optie {{index}}: <input type="text" name="answers" value="{{text}}" maxlength="24"></label></li>
			{{/each}}
		</ol>
		{{#if nextOption}}
			<a href="/c/{{creatorname}}/poll/{{pollId}}/vraag-{{questionNumber}}-bewerken{{optionCount}}">Antwoord toevoegen</a>
		{{/if}}
	</fieldset>
	<label>Tijd om op vraag te antwoorden:
		<select name="timer">
			{{#if timeStandardSet}}
				{{#each timeStandardOptions}}
				<option value="{{seconds}}" {{selected}}>{{text}}</option>
				{{/each}}
			{{else}}
				<option value="60" selected>1 minuut</option>
				<option value="120">2 minuten</option>
				<option value="180">3 minuten</option>
				<option value="240">4 minuten</option>
				<option value="300">5 minuten</option>
			{{/if}}
		</select>
	</label>
	{{#if hidden}}
		<label>Vraag verbergen <input type="checkbox" name="hidden" checked></label>
	{{else}}
		<label>Vraag verbergen <input type="checkbox" name="hidden"></label>
	{{/if}}
	{{#if showresults}}
		<label>Resultaten direct tonen <input type="checkbox" name="showresults" checked></label>
	{{else}}
		<label>Resultaten direct tonen <input type="checkbox" name="showresults"></label>
	{{/if}}
	<input type="hidden" name="pollId" value="{{pollId}}">
	<input type="hidden" name="index" value="{{questionNumber}}">
	<input type="hidden" name="creatorname" value="{{creatorname}}">
	<div>
		<input type="submit" value="Wijzigingen opslaan">
	</div>
	</form>
	<a href="/c/{{creatorname}}/poll/{{pollId}}/edit">Ga terug<span> naar poll bewerken</span></a>
</main>