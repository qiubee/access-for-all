{{> creatorHeader}}
<main id="content">
	<form action="/edit-poll" method="POST">
	<div>
		<label><span>Titel: </span><input type="text" name="title" value="{{pollname}}"></label>
	</div>
	{{#if questions}}
	<ol>
		{{#each question}}
		<li><label>Vraag <input type="number" name="order" value="{{index}}" min="1" max="10"></label>: {{question}} 
		<p><span>Vraag </span><a href="vraag-{{index}}">bewerken</a><span> of </span><a href="vraag-verwijderen">verwijderen</a><span>.</span></p>
		</li>
		{{/each}}
	</ol>
	{{/if}}
	<a href="vraag-toevoegen">Maak nieuwe vraag</a>
	<input type="submit" value="Wijzigingen opslaan">
	</form>
	<a href="instellingen">Instellingen</a>
</main>